extends ./index.jade

block content
  .block-panel
    .row-b
      .col-lg-12
        .input-group
          span.input-group-btn
            button#create-room.btn.btn-primary(type='button') Create room
          input#room-name.form-control(type='text')
      div(style='clear: both;')
    h1 Available rooms
    #room-list.list-group
      - for (var i = 0; i < rooms.length; i ++) {
        a.list-group-item(href='/room?name=' + encodeURIComponent(rooms[i].name))= rooms[i].name
      - }
block scripts
  script(src="bower-components/socket.io-client/socket.io.js")
  script(src="js/input-submiter.js")
  script(src="js/lobby.js")