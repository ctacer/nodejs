extends ./index.jade

block content
  .block-panel
    h2.block-panel-heading= room.name
    .row.message-input
      .col-lg-12
        .input-group
          span.input-group-btn
            button#create-message.btn.btn-default(type='button') Send
          input#message-text.form-control(type='text')
        #message-file-container.input-group
          .drop-zone
          input#message-file(type='file')
    .panel.panel-default
      #message-container.panel-body.chat-body
        - for (var i = 0; i < messages.length; i++) {
          span.message
            span.user(style='color: #0A6')= messages[i].author
            = ': ' + messages[i].text
        - }
